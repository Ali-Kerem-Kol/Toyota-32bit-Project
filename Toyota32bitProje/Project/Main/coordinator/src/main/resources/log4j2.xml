<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>

        <!-- Console (okunabilir) -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%t] %c{1} - %msg%n"/>
        </Console>

        <!-- JSON Rolling File (yalnÄ±zca INFO ve Ã¼stÃ¼) -->
        <RollingFile
                name="JsonFile"
                fileName="logs/coordinator.json"
                filePattern="logs/coordinator-%d{yyyy-MM-dd}-%i.json.gz"
                append="true">

            <!-- ðŸ‘‡ JSON log -->
            <JsonLayout
                    eventEol="true"
                    compact="true"
                    complete="false"
                    properties="true"
                    objectMessageAsJsonObject="false"
                    includeStacktrace="true"
                    includeMapMessage="true"
                    includeThreadContext="true"
                    includeNullDelimiter="false"
                    includeTimeMillis="true" />



            <!-- Rotasyon kurallarÄ± -->
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="7"/>

            <!-- INFO+ filtre -->
            <Filters>
                <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingFile>

    </Appenders>

    <Loggers>

        <!-- Ana kodun loglarÄ± -->
        <Logger name="com.mydomain.main" level="trace" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="JsonFile"/>
        </Logger>

        <!-- 3rd-party kitaplÄ±klar -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="JsonFile"/>
        </Root>

    </Loggers>

</Configuration>
